<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <% @articles.hot_articles.each_with_index do |f, i| %>
    <li data-target="#myCarousel" data-slide-to="<%=i+1%>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active" style="width: 100%;height: 300px">
      <%= image_tag @articles.first.image.url(:large), class:'image'%>
      <div class="carousel-caption">
        <h3><%= @articles.first.title %></h3>
      </div>
    </div>    
    <% @articles.hot_articles.each do |f| %>
      <div class="item" style="width: 200;height: 300px">
        <%= image_tag f.image.url(:large), class:'image' %>
        <div class="carousel-caption">
          <h3><%= f.title %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>
    