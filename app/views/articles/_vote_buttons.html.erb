<% if user_signed_in? %>
	<div class="btn-group">
	  <%= render 'articles/vote_button', article: article, value: 1 %>
	  <%= render 'articles/vote_button', article: article, value: -1 %>
	</div>
<% else %>
	<p class="btn btn-warning"><%= link_to "Để bình chọn vui lòng đăng nhập ", new_user_session_path %></p>
<% end %>