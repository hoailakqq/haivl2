<div style="background: #f1f;font-size: 20px">
  New article
</div>
<%= form_for @article do |f| %>
  <%= f.label :Title %><br/>
  <%= f.text_field :title %><br/>
  <% if @article.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@article.errors[:title].count, 'error')%></h2>
    <% @article.errors[:title].each do |a| %>
        <%= a %>
    <% end %>
    </div>
  <% end %>
    
  <%= f.label :Content %><br/>
  <%= f.text_area :content %><br/>
  <% if @article.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@article.errors[:content].count, 'error')%></h2>
    <% @article.errors[:content].each do |a| %>
        <%= a %>
    <% end %>
    </div>
  <% end %>
  <%= f.submit "create" %>
<% end %>