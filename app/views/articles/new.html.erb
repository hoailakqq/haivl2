  <button type="button" class="btn btn-primary">New Post</button>
  <%= form_for @article do |f| %>
    <label class="control-label" for="inputWarning1">Title</label><br/>
    <%= f.text_field :title %><br/>
    <% if @article.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@article.errors[:title].count, 'error')%></h2>
      <% @article.errors[:title].each do |a| %>
          <%= a %>
      <% end %>
      </div>
    <% end %>
      
    <label class="control-label" for="inputWarning1">Content</label><br/>
    <%= f.text_area :content,size: "60x12" %><br/>
    <% if @article.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@article.errors[:content].count, 'error')%></h2>
      <% @article.errors[:content].each do |a| %>
          <%= a %>
      <% end %>
      </div>
    <% end %>
    <%= f.submit "create" %>
  <% end %>
